              // <a id="sb6" class="sc-b6" onclick="return share.mail(share_url,share_title,share_image,share_desc);" href="#"></a>
          .search__area
            form.form-search(action="[[~[[+landing]]]]", method="[[+method]]")
              .inputs-group
                input#123.search-input(type="text", name="[[+searchIndex]]", placeholder="Поиск по сайту")
                input(type="hidden", name="id", value="[[+landing]]")
                input.search-submit(type="submit", value="")

      .header__area
        header.header
          .header__logo
            a(href="/")
              img(
                alt="Ремонт квартир в Саратове" 
                src="assets/img/logo1.png"
                )
              span Сарремонт
          .header__newInfo
            span Ремонт квартир, офисов, помещений под ключ
            span Саратов, Энгельс, Москва
            span Звоните с 8:00 до 21:00
            span Бесплатная консультация!
          .header__info
            .header__infoInner
              i.fa.fa-phone-square(aria-hidden="true")
              a(href="tel:[[pdoField? &id=`1` &field=`mainPhone`]]") [[pdoField? &id=`1` &field=`mainPhone`]]
            .header__infoInner
              i.fa.fa-envelope(aria-hidden="true")
              a(href="mailto:[[pdoField? &id=`1` &field=`mainEmail`]]") [[pdoField? &id=`1` &field=`mainEmail`]]
            .slogan1 ремонт со знаком качества!!!
      .topMenu__area
        nav(class="topMenu__outer")
          .menuButton__outer
            .menuButton
              span
              span
              span
          ul.topMenu
            li.first.active
              a(href="/") Главная
            li
              a(href="servises/") Наши услуги
            li
              a(href="price.html") Цены
            li
              a(href="actions/") Акции
            li.last
              a(href="kontaktyi.html") Контакты

      +mainSlider

      .content__area
        .content__outer
          .content__inner
            .offer
              .offerText Комплексный ремонт квартиры за 2 месяца или вернем 1000 рублей за каждый день просрочки
              .offerBtn.js_btn1 Заказать
            .content__title
              h1 [[!*longtitle:isnot=``:then=`[[*longtitle]]`:else=`[[*pagetitle]]`]]
            .content
              | [[*content]]
      .manufacturersCarousel__area
        .manufacturersCarousel__wrapper
          .title1.title1_white.title1_manufacturer Производители
          .manufacturersCarousel
            .swiper-container.manufacturersCarousel-container
              .swiper-wrapper
                .swiper-slide.manufacturersCarousel__slider
                  img(src="assets/img/man/01.jpg", alt="[[+title]]")
                .swiper-slide.manufacturersCarousel__slider
                  img(src="assets/img/man/02.jpg", alt="[[+title]]")
                .swiper-slide.manufacturersCarousel__slider
                  img(src="assets/img/man/03.jpg", alt="[[+title]]")
                .swiper-slide.manufacturersCarousel__slider
                  img(src="assets/img/man/04.jpg", alt="[[+title]]")
                .swiper-slide.manufacturersCarousel__slider
                  img(src="assets/img/man/05.jpg", alt="[[+title]]")
                .swiper-slide.manufacturersCarousel__slider
                  img(src="assets/img/man/06.jpg", alt="[[+title]]")
                
                
            .xSwiper__left.manufacturersCarousel__left
              i.fa.fa-angle-left(aria-hidden='true')
            .xSwiper__right.manufacturersCarousel__right
              i.fa.fa-angle-right(aria-hidden='true')
          .xSwiper__pagination.manufacturersCarousel__pagination
      
      .gallery__area
        .gallery__outer
          .title1 Галерея
          .rows.gallery
            .gallery__item
              a.fancybox(href="/assets/components/gallery/connector.php?action=web/phpthumb&amp;ctx=web&amp;w=750&amp;h=800&amp;zc=0&amp;far=&amp;q=90&amp;src=%2Fassets%2Fgallery%2F2%2F13.jpg", data-fancybox="group")
