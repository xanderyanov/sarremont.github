          .pagin
            ul.pagination

      .form1__area
        .form1__outer
          .form1__title
            .title1 Обратная связь
            span Вы можете отправить нам свой вопрос с помощью этой формы и мы обязательно на него ответим.
          form.form1(action="#")
            input.name1(name="name1", type="text", placeholder="Ваше имя")
            input.phone1(name="phone1", type="text", placeholder="Укажите Ваш номер")
            input.email1(name="email1", type="text", placeholder="Укажите Ваш email")
            input(class="work_email1", name="work_email1", type="text", placeholder="Рабочий email")
            textarea.message1(name="message1", cols="30", rows="10", placeholder="Ваше сообщение")
