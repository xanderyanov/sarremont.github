    .site
      .topBlock__area
        .topBlock
          .like__area
            .likeBlock
              // <a class="like_twitter" onclick="return share.twitter(share_url,share_title);" href="#"><i
              // class="fa fa-twitter" aria-hidden="true"></i></a>
